rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===================================
    // COLEÇÃO: Perfis dos Alunos
    // ===================================
    match /artifacts/fonoaudiologo-33594/public/data/profiles_v2/{email} {
      // Permite que qualquer pessoa veja o ranking e crie seu perfil inicial
      allow read: if true;
      allow create: if true;
      
      // TRAVA DE SEGURANÇA PARA XP:
      // O banco só aceita a atualização se o novo valor de XP for, no máximo,
      // 35 pontos maior que o valor que já estava gravado.
      // Também garante que o email não seja alterado.
      allow update: if request.resource.data.xp <= resource.data.xp + 35
                    && request.resource.data.email == resource.data.email;
    }
    
    // ===================================
    // COLEÇÃO: Chat da Turma
    // ===================================
    match /artifacts/fonoaudiologo-33594/public/data/messages_v3/{msgId} {
      // Permissão total para leitura e escrita (chat público)
      allow read, write: if true;
    }
    
    // ===================================
    // FUTURO: Histórico de Exercícios
    // ===================================
    match /artifacts/fonoaudiologo-33594/public/data/exercises_history/{exerciseId} {
      // Qualquer um pode criar (para logging)
      allow create: if true;
      
      // Apenas leitura (histórico é imutável)
      allow read: if true;
      
      // Bloqueado atualização e exclusão (dados imutáveis)
      allow update, delete: if false;
    }
    
    // ===================================
    // TUDO O MAIS: BLOQUEADO POR PADRÃO
    // ===================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
